<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="1dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="200dp"
    android:background="@color/cardview_light_background"
    android:layout_height="250dp">
    <ImageView
        android:layout_width="108dp"
        android:layout_gravity="center"
        android:layout_height="180dp"
        android:id="@+id/ivslider_product_image" />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="name of product"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvslider_product_name" />
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="5dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_verfied"
            android:id="@+id/imageView3"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorPrimary"
            android:text="234 Rs"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvslider_product_rate" />

        <TextView
            android:layout_marginLeft="5dp"
            android:text="234 Rs"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvslider_product_mrp" />

    </LinearLayout>

    <LinearLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:text="30%"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvslider_product_Discount" />
    <ImageView
        android:layout_width="20dp"
        android:layout_marginLeft="5dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_024_percentage"
        android:id="@+id/imageView4"
        android:layout_weight="1" />
</LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>