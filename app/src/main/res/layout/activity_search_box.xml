<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_box"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context="in.mycitycart.com.mycitycart.activties.ActivitySearchBox">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarLayout"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
         />
        <ImageView
            android:id="@+id/iv_Activityserchbox_barcode"
            android:layout_width="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_009_barcode"
            android:layout_height="40dp" />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <ProgressBar
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar3" />

    <ListView
        android:id="@+id/SearchView_RecentSerchlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <ListView
        android:id="@+id/SearchView_listview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
         />




</LinearLayout>
