<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    cardElevation="5dp"
    cardCornerRadius="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:background="@color/cardview_light_background"
    android:layout_height="230dp">
    <ImageView
        android:layout_width="190dp"
        android:layout_gravity="center"
        android:layout_height="140dp"
        android:id="@+id/ivslider_product_image" />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="name of product"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvslider_product_name" />
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="5dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_verfied"
            android:id="@+id/imageView3"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="ratings"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvslider_product_rate" />
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="5dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_verfied"
            android:id="@+id/image3"
            android:layout_weight="1" />
    </LinearLayout>

<LinearLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:text="type"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvslider_product_offer" />
    <ImageView
        android:layout_width="20dp"
        android:layout_marginLeft="5dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_024_percentage"
        android:id="@+id/imageView4"
        android:layout_weight="1" />
</LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>